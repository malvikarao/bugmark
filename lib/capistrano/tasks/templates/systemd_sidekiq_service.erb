[Unit]
Description=Sidekiq: Rails background job processing for Bugmark
After=syslog.target network.target redis-server.service bugmark.service

[Service]
User=deploy
Group=deploy
Type=simple

WorkingDirectory=/home/deploy/run/bugmark/current
EnvironmentFile=/home/deploy/run/bugmark/current/.env
ExecStart=/bin/bash -lc 'bin/sidekiq -e production'

RestartSec=1
Restart=on-failure

StandardInput=null
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=sidekiq

[Install]
WantedBy=multi-user.target
